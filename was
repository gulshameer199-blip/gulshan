name: Build and Deploy Lambda

on:
  push:
    branches:
      - main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    permissions:
      id-token: write
      contents: read

    env:
      AWS_REGION: eu-west-1                    # change if needed
      LAMBDA_FUNCTION_NAME: your-lambda-name   # existing Lambda function

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install build dependencies
        run: |
          python -m pip install --upgrade pip
          pip install boto3 awscli

      - name: Build Lambda zip with Python script
        env:
          SRC_DIR: ./lambda_src           # folder with lambda_function.py
          REQS_FILE: requirements.txt     # optional; script will skip if missing
          OUTPUT_ZIP: lambda_package.zip
        run: |
          python build_lambda_zip.py

      - name: Configure AWS credentials (OIDC)
        uses: aws-actions/configure-aws-credentials@v4
        with:
          role-to-assume: ${{ secrets.AWS_ROLE_TO_ASSUME }}
          aws-region: ${{ env.AWS_REGION }}

      - name: Deploy Lambda using AWS CLI
        run: |
          aws lambda update-function-code \
            --function-name "${LAMBDA_FUNCTION_NAME}" \
            --zip-file fileb://lambda_package.zip
